{
  "name": "vsxt",
  "description": "VS Code XT Commands",
  "author": "Daniel Miller",
  "repository": "https://github.com/millerdev/vsxt",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "publisher": "millerdev",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsxt.command",
    "onCommand:vsxt.ag",
    "onCommand:vsxt.openFile"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vsxt.command",
        "title": "XT: Command"
      },
      {
        "command": "vsxt.ag",
        "title": "XT: Ag (The Silver Searcher)"
      },
      {
        "command": "vsxt.openFile",
        "title": "XT: Open File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vsxt",
      "properties": {
        "vsxt.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Python interpreter path. Recommended: create a virtualenv with Python 3.7+ and set this to the absolute path to its Python executable."
        },
        "vsxt.agPath": {
          "type": "string",
          "default": "ag",
          "description": "Ag (The Silver Searcher) executable path."
        }
      }
    }
  },
  "main": "./client/extension",
  "scripts": {
    "test": "mocha client/test",
    "pkg": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.34.0",
    "mocha": "^8.2.1",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.1",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "vscode-languageclient": "^5.2.1"
  }
}
